<%= simple_form_for preparation_question, defaults: { input_html: { class: 'default_class' } } do |f| %>
  <%= render 'shared/error_messages', object: f.object  %>

  <%= f.input :title, input_html: { class: 'special'  } %>
  <%= f.input :body, input_html: { class: 'special'  } %>
  <%= f.input :hint %>
  <%= f.button :submit, class: "btn btn-success" %>
<% end %>
