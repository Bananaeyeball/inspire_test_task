<div class="container">
  <div class="row">
    <div class="col-12">
      <p class="text-center"><%= preparation_question.title %></p>
    </div>
  </div>

  <div class="row">
    <div class="col-8">
      <%= preparation_question.body %>
    </div>
  </div>
  <div class="row">
    <div class="col-8">
      <span class="badge badge-pill badge-info">Hint</span>
      <%= preparation_question.hint %>
    </div>
  </div>

  <div class="row">
    <div class='col-12'>
      <%= link_to 'Edit', edit_preparation_question_path(preparation_question), class: 'btn btn-primary' %>
      <%= link_to 'Back', root_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>
